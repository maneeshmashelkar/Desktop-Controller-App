<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/upButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/keyboard_arrow_up_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/leftButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/keyboard_arrow_left_black_24dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/presentationButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:background="@drawable/fullscreen_black_24dp" />

        <Button
            android:id="@+id/rightButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/keyboard_arrow_right_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/downButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/keyboard_arrow_down_black_24dp" />
    </LinearLayout>

</LinearLayout>